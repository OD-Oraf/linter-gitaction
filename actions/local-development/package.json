{
  "name": "linter-gitaction",
  "version": "1.0.0",
  "description": "Development dependencies for linting tools",
  "private": true,
  "scripts": {
    "lint:markdown": "markdownlint documentation/**/*.md --config ../.markdownlint.json",
    "lint:openapi": "spectral lint --ruleset ../.spectral.yaml",
    "lint:json": "ajv validate --spec=draft7 --errors=json -s ../../categories-schema.json -d categories.json",
    "lint:all": "npm run lint:markdown && npm run lint:openapi && npm run lint:json",
    "fix:markdown": "markdownlint documentation/**/*.md --config ../.markdownlint.json --fix"
  },
  "devDependencies": {
    "markdownlint-cli": "^0.37.0",
    "@stoplight/spectral-cli": "^6.11.0",
    "ajv-cli": "^5.0.0"
  }
}
