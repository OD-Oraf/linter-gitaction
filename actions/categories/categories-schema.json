{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://example.com/categories-schema.json",
  "title": "Categories Configuration",
  "description": "Schema for validating categories.json file structure",
  "type": "array",
  "minItems": 1,
  "uniqueItems": true,
  "items": {
    "type": "object",
    "required": ["tagKey", "value"],
    "additionalProperties": false,
    "properties": {
      "tagKey": {
        "type": "string",
        "minLength": 1,
        "description": "The key identifier for the tag",
        "examples": ["environment", "team", "project"]
      },
      "value": {
        "type": "string",
        "minLength": 1,
        "description": "The value associated with the tag key",
        "examples": ["production", "development", "backend-team"]
      }
    }
  },
  "examples": [
    [
      {
        "tagKey": "environment",
        "value": "production"
      },
      {
        "tagKey": "team",
        "value": "backend"
      }
    ]
  ]
}
