{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://example.com/categories-schema.json",
  "title": "Categories Configuration",
  "description": "Schema for validating categories.json file structure",
  "type": "array",
  "minItems": 1,
  "uniqueItems": true,
  "items": {
    "type": "object",
    "required": ["tagKey", "value"],
    "oneOf": [
      {
        "additionalProperties": false,
        "properties": {
          "tagKey": {
            "const": "Owning Business Group"
          },
          "value": {
            "type": "array",
            "items": {
              "type": "string",
              "enum": [
                "Global",
                "Service",
                "Customer Experience",
                "Engineering",
                "Product",
                "Marketing",
                "Sales",
                "Operations",
                "Finance",
                "Human Resources"
              ]
            },
            "minItems": 1,
            "uniqueItems": true,
            "description": "Array of business groups responsible for this resource"
          }
        }
      },
      {
        "additionalProperties": false,
        "properties": {
          "tagKey": {
            "const": "Data Classification"
          },
          "value": {
            "type": "string",
            "enum": [
              "DCL1",
              "DCL2", 
              "DCL3",
              "DCL4"
            ],
            "description": "Data classification level (DCL1=Public, DCL2=Internal, DCL3=Confidential, DCL4=Restricted)"
          }
        }
      }
    ]
  },
  "examples": [
    [
      {
        "tagKey": "Owning Business Group",
        "value": [
          "Global",
          "Service"
        ]
      },
      {
        "tagKey": "Data Classification",
        "value": "DCL4"
      }
    ]
  ]
}
